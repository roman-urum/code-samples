@using Maestro.Web.Resources
@using NodaTime

<div class="row">
    <div class="col-sm-4">
        <h3>Status</h3>
        <div data-toggle="buttons" class="btn-group btn-group-block-ci clearfix">
            <label class="btn btn-default<%=(status == 1 ? ' active' : '') %>">
                <input type="radio" value="1" name="status">
                Active
            </label>
            <label class="btn btn-default<%=(status == 2 ? ' active' : '') %>">
                <input type="radio" value="2" name="status">
                In Training
            </label>
            <label class="btn btn-default<%=(status == 0 ? ' active' : '') %>" >
                <input type="radio" value="0" name="status">
                Inactive
            </label>
        </div>
    </div>
    <div class="col-sm-8">
        <div id="form-group-categories-of-care" class="form-group form-group-categories-of-care-ci">
            <h3>Category Of Care</h3>
            <select id="categoriesOfCare" data-placeholder="Select Categories Of Care" name="categoriesOfCare" data-name="categoriesOfCare" class="form-control chosen-select categories-of-care"></select>
        </div>
    </div>
</div>

<h3>@GlobalStrings.Patient_KeyIdentifiersText</h3>

<div class="row">
    <div class="col-sm-4">
        <div class="form-group">
            <label for="firstName">@GlobalStrings.Patient_FirstName</label>
            <input type="text" class="form-control" id="firstName" name="firstName" data-name="firstName" value="">
            <span class="help-block hidden"></span>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <label for="middleInitial">@GlobalStrings.Patient_MiddleInitial</label>
            <input type="text" class="form-control" id="middleInitial" name="middleInitial" data-name="middleInitial" value="">
            <span class="help-block hidden"></span>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <label for="lastName">@GlobalStrings.Patient_LastName</label>
            <input type="text" class="form-control" id="lastName" name="lastName" data-name="lastName" value="">
            <span class="help-block hidden"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <div class="form-group">
            <label for="gender">@GlobalStrings.Patient_Gender</label>
            <div data-toggle="buttons" class="btn-group btn-group-block-ci clearfix">
                <label class="btn btn-default<%=(gender == 1 ? ' active' : '') %>">
                    <input type="radio" id="male" name="gender" value="1">
                    @GlobalStrings.Gender_Male
                </label>
                <label class="btn btn-default<%=(gender == 2 ? ' active' : '') %>">
                    <input type="radio" id="female" name="gender" value="2">
                        @GlobalStrings.Gender_Female
                </label>
            </div>
            <span class="help-block help-block-error help-block-gender hidden"></span>
        </div>
    </div>

    <div class="col-sm-4">
        <div class="form-group">
            <label for="birthDate">@GlobalStrings.Patient_DateOfBirth</label>
            <div id="birthDate-datetimepicker" class="input-group date">
                <input type="text" class="form-control" id="birthDate-dp" name="birthDate-dp" value="">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            <input type="hidden" id="birthDate" name="birthDate" value="">
            <span class="help-block help-block-error help-block-birthDate hidden"></span>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <label for="age">@GlobalStrings.Patient_Age</label>           
            <input type="text" class="form-control" id="age" name="age" value="" readonly="readonly">
            <span class="help-block hidden"></span>
        </div>
    </div>
</div>

<div id="patient-identifiers"></div>

<h3>@GlobalStrings.Patient_PatientDemographicsText</h3>

<div class="row">
    <div class="col-sm-4">
        <div class="form-group">

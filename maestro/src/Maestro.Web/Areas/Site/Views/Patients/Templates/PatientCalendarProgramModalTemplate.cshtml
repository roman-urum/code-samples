<script id="patientCalendarProgramModalTemplate" type="text/template">
    <div class="alert alert-danger hidden" role="alert"></div>
    <h4>Care Element</h4>
    <div class="row form-horizontal">
        <div class="col-sm-7">
            <div class="form-group">
                <label for="startDate" class="col-sm-6 control-label">Start Date</label>
                <div class="col-sm-6">
                    <div id="startDate-datetimepicker" class="input-group">
                        <input type="text" class="form-control" id="startDateDp" name="startDateDp">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    <input type="hidden" id="startDate" name="startDate">
                    <span class="help-block help-block-error help-block-startDate hidden"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="estimatedEndDate" class="col-sm-6 control-label">Estimated End Date</label>
                <div class="col-sm-6">
                    <input type="text" name="estimatedEndDate" class="form-control" id="estimatedEndDate" readonly="readonly">
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">
                <label for="startDay" class="col-sm-7 offset-right-0 control-label">Start Program Day</label>
                <div class="col-sm-5">
                    <input type="number" class="form-control" id="startDay" name="startDay" data-name="startDay">
                </div>
                <span class="col-sm-12 help-block help-block-error help-block-startDay hidden"></span>
            </div>
            <div class="form-group">
                <label for="endDay" class="col-sm-7 offset-right-0 control-label">End Program Day</label>
                <div class="col-sm-5">
                    <input type="number" class="form-control" id="endDay" name="endDay" data-name="endDay">
                </div>
                <span class="col-sm-12 help-block help-block-error help-block-endDay hidden"></span>
            </div>
        </div>
    </div>
    <h4>Program Time</h4>
    <div class="row form-horizontal">
        <div class="col-sm-7">
            <div class="radio">
                <label style="white-space: nowrap">
                    <input type="radio" name="timeType" id="defaultTime" value="defaultTime">
                    Default to patient preferred time (<%- obj.preferredSessionTime %>)
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="timeType" id="differentTime" value="differentTime">
                    Select a different time
                </label>
            </div>
            <div class="form-group col-sm-6">
                <div class="input-group program-time-ci" id="programTime-time">
                    <input type="text" class="form-control" id="programTimeTp" name="programTimeTp" value="">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                    </span>
                </div>
                <input type="hidden" id="programTime" name="programTime" data-name="programTime" value="">
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">
                <label for="validHours" class="col-sm-4 offset-right-0 control-label">Valid for</label>
                <div class="col-sm-8">
                    <div class="input-group">
                        <input type="number" class="form-control" id="validHours" name="validHours" data-name="validHours">
                        <span class="input-group-addon">Hours</span>
                    </div>
                    <span class="help-block help-block-error help-block-validHours hidden"></span>
                </div>
            </div>
        </div>
    </div>
</script>